<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane fx:id="mainStackPane" maxHeight="720.0" maxWidth="1240.0" minHeight="-Infinity" minWidth="-Infinity" prefHeight="720.0" prefWidth="1240.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.kabocchi.king_LMS_Lite.Controller.MainController">
   <children>
      <BorderPane fx:id="mainPane">
         <top>
            <VBox fx:id="NavigationBox" prefWidth="500.0" BorderPane.alignment="CENTER">
               <children>
                  <GridPane>
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                     </rowConstraints>
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="King-LMS-Lite" textAlignment="CENTER" wrappingWidth="413.0" GridPane.columnIndex="1">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Text>
                        <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="100.0" spacing="5.0" GridPane.columnIndex="2">
                           <children>
                              <Button fx:id="minimize" mnemonicParsing="false" onAction="#onClickMinimize">
                                 <HBox.margin>
                                    <Insets bottom="-10.0" />
                                 </HBox.margin>
                              </Button>
                              <Button fx:id="closeWindow" mnemonicParsing="false" onAction="#onClickClose">
                                 <HBox.margin>
                                    <Insets bottom="-10.0" />
                                 </HBox.margin>
                              </Button>
                           </children>
                           <padding>
                              <Insets right="10.0" />
                           </padding>
                        </HBox>
                     </children>
                  </GridPane>
                  <HBox fx:id="HBox" prefHeight="70.0" prefWidth="325.0" spacing="15.0">
                     <children>
                        <Button fx:id="news" mnemonicParsing="false" onAction="#onClickNews" text="&#10;&#10;お知らせ">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Button>
                        <Button fx:id="task" mnemonicParsing="false" onAction="#onClickTask" text="&#10;&#10;課題一覧">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Button>
                        <Button fx:id="timeTable" mnemonicParsing="false" onAction="#onClickTimeTable" text="&#10;&#10;時間割(Beta)">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Button>
                        <Button fx:id="setting" mnemonicParsing="false" onAction="#onClickSetting" text="&#10;&#10;設定">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Button>
                     </children>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                     <padding>
                        <Insets left="20.0" right="20.0" />
                     </padding>
                  </HBox>
               </children>
            </VBox>
         </top>
      </BorderPane>
   </children>
</StackPane>
